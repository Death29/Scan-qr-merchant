<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen.qr.HomeViewUser">

    <TextView
        android:id="@+id/lblInfoUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/lbl_info_user"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_margin="10dp" />

    <TextView
        android:id="@+id/lblNominal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/lblInfoUser"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:text="Nominal :"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvNominal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/lblNominal"
        app:layout_constraintBottom_toBottomOf="@id/lblNominal"
        app:layout_constraintStart_toEndOf="@id/lblNominal"
        android:layout_marginHorizontal="30dp"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btnScan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Scan Qr"
        android:textAllCaps="false"
        android:background="@drawable/bg_rounded"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvNominal"/>

</androidx.constraintlayout.widget.ConstraintLayout>